<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizar Livros</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/visualizar.css">
</head>
<body>
    <header class="header">
        <h1 class="title">Estante</h1>
        <a href="/" class="home-link"><img src="img/moby.png" alt="moby-icon" class="logo"></a>
    </header>
    
    <header id="mid">
        <div class="search">
            <div class="input">
                <input type="search" placeholder="Busque por livros aqui!">
                <div class="input-group-append">
                    <div class="input-group-text" style="background-color: #bcbcbc; margin-left: 10px;">
                        <i class="fas fa-search" id="searchIcon"></i>
                    </div>
                </div>
            </div>
        </div>


        <script>
            document.getElementById('searchIcon').onclick = function() {
                var searchTerm = document.querySelector('.input input[type="search"]').value;
                
               
                var xhr = new XMLHttpRequest();
                xhr.open('GET', '/livros?search=' + searchTerm, true);
                xhr.onload = function() {
                    if (xhr.status == 200) {
                       
                        var livros = JSON.parse(xhr.responseText);
                        var booksList = document.querySelector('.books-list');
                        booksList.innerHTML = '';
                        livros.forEach(function(livro) {
                            var listItem = document.createElement('li');
                            listItem.classList.add('book-item');
                            listItem.innerHTML = `
                                <strong>Título:</strong> <span class="book-title">${livro.titulo}</span><br>
                                <strong>Autor:</strong> <span class="book-author">${livro.autor}</span><br>
                                <strong>Data de Publicação:</strong> <span class="book-published-date">${livro.ano_de_publicacao}</span><br>
                                <strong>Gênero:</strong> <span class="book-genre">${livro.genero}</span><br>
                                <strong>Sinopse:</strong> <span class="book-synopsis">${livro.sinopse}</span><br>
                                <strong>ID do Livro:</strong> <span class="book-id">${livro.id_livro}</span>
                            `;
                            booksList.appendChild(listItem);
                        });
                    } else {
                        console.error('Erro ao buscar livros:', xhr.statusText);
                    }
                };
                xhr.onerror = function() {
                    console.error('Erro de rede ao buscar livros');
                };
                xhr.send();
            };
        </script>
        
    </header>
    
    <main>
        <section class="books-section">
            <h2 class="section-title">Meus Livros</h2>
            <ul class="books-list">
                <% livros.forEach(livro => { %>
                    <li class="book-item">
                        <strong>Título:</strong> <span class="book-title"><%= livro.titulo %></span><br>
                        <strong>Autor:</strong> <span class="book-author"><%= livro.autor %></span><br>
                        <strong>Data de Publicação:</strong> <span class="book-published-date"><%= livro.ano_de_publicacao %></span><br>
                        <strong>Gênero:</strong> <span class="book-genre"><%= livro.genero %></span><br>
                        <strong>Sinopse:</strong> <span class="book-synopsis"><%= livro.sinopse %></span><br>
                        <strong>ID do Livro:</strong> <span class="book-id"><%= livro.id_livro %></span>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>

        <footer class="footer">
        <nav class="footer-nav">
            <ul>
                <li><a href="/adicionar.html">Adicionar um livro</a></li>
                <li><a href="/remover.html">Remover um livro</a></li>
                <li><a href="/editar.html">Editar um livro</a></li>
            </ul>
        </nav>
    </footer>
</body>
</html>